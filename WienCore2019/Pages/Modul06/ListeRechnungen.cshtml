@page
@model WienCore2019.ListeRechnungenModel
@{
    ViewData["Title"] = "ListeRechnungen";
}

<h1>ListeRechnungen</h1>

<ul class="list-group">
    @foreach (var item in Model.Liste)
    {
    <li class="list-group-item d-flex justify-content-between align-items-center">
     Datum  @item.Datum Kundennummer @item.KundenID
        <span class="badge badge-primary badge-pill">@item.Positionen.Count</span>
    </li>
    }
    
</ul>
